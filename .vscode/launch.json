{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Service - Local (Debug)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Solution - Build (Debug)",
            "program": "${workspaceFolder}/HardCiter.Service/bin/Debug/netcoreapp2.1/HardCiter.Service.dll",
            "args": [],
            "cwd": "${workspaceFolder}/HardCiter.Service",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "^\\s*Now listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Local"
            }
        }
    ]
}